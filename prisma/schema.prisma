// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Series {
  id          Int       @id @default(autoincrement())
  week        Int       @unique
  title       String
  description String
  postures    Posture[]
}

model Posture {
  id           Int     @id @default(autoincrement())
  name         String
  duration     Int
  sequenceOrder Int
  seriesId     Int
  series       Series  @relation(fields: [seriesId], references: [id])
}

model Session {
  id        Int     @id @default(autoincrement())
  week      Int
  duration  Int
  progress  Float
  date      DateTime @default(now())
}
